<UserControl
    x:Class="HRVTrack.View.MainPageUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HRVTrack.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <StackPanel
            Margin="5"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Border
                Width="145"
                Height="55"
                Margin="25"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Transparent"
                BorderBrush="Gray"
                BorderThickness="2"
                CornerRadius="20">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <Label
                        HorizontalAlignment="Center"
                        Content="Ostatnia wartość"
                        FontSize="16"
                        Foreground="White" />
                    <Label
                        HorizontalAlignment="Center"
                        Content="56ms"
                        Foreground="White" />
                    <!--  Binding do dynamicznej wartości  -->
                </StackPanel>
            </Border>

            <Border
                Width="145"
                Height="55"
                Margin="25"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Transparent"
                BorderBrush="Gray"
                BorderThickness="2"
                CornerRadius="20">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <Label
                        HorizontalAlignment="Center"
                        Content="Najwyższa wartość"
                        FontSize="16"
                        Foreground="White" />
                    <Label
                        HorizontalAlignment="Center"
                        Content="76ms"
                        Foreground="White" />
                    <!--  Binding  -->
                </StackPanel>
            </Border>
            <Border
                Width="145"
                Height="55"
                Margin="25"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Transparent"
                BorderBrush="Gray"
                BorderThickness="2"
                CornerRadius="20">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <Label
                        HorizontalAlignment="Center"
                        Content="Najniższa wartość"
                        FontSize="16"
                        Foreground="White" />
                    <Label
                        HorizontalAlignment="Center"
                        Content="52ms"
                        Foreground="White" />
                    <!--  Binding  -->
                </StackPanel>
            </Border>
        </StackPanel>


    </Grid>
</UserControl>
